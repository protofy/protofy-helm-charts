{
  "prConcurrentLimit": 1,
  "extends": [
    "config:recommended",
    ":dependencyDashboard"
  ],
  "schedule": [
    "on monday",
    "on wednesday",
    "on friday"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": [
        "patch"
      ],
      "groupName": "patch dependencies",
      "prPriority": 30
    },
    {
      "matchUpdateTypes": [
        "minor"
      ],
      "groupName": "minor dependencies",
      "minimumReleaseAge": "7 days",
      "prPriority": 20
    },
    {
      "matchUpdateTypes": [
        "major"
      ],
      "minimumReleaseAge": "30 days",
      "prPriority": 10
    }
  ]
}
